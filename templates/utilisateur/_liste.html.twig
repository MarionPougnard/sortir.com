{% extends 'base.html.twig' %}

{% block body %}
    <div id="title" class="text-center mt-3">
        <h1>Gérer les utilisateurs</h1>
    </div>

    <div class="container">
        <div class="row d-flex justify-content-center mt-5">

            <table class="table table-striped">
                <thead>
                <tr>
                    <th>Nom</th>
                    <th>Prénom</th>
                    <th>Pseudo</th>
                    <th>Téléphone</th>
                    <th>Email</th>
                    <th>Campus</th>
                    <th>Photo</th>
                    <th>Actions</th>

                </tr>
                </thead>

                <tbody>
                {% for utilisateur in utilisateurs %}
                    <tr class="align-middle">
                        <td>{{ utilisateur.nom }}</td>
                        <td>{{ utilisateur.prenom }}</td>
                        <td>{{ utilisateur.pseudo }}</td>
                        <td>{{ utilisateur.telephone }}</td>
                        <td>{{ utilisateur.email }}</td>
                        <td>{{ utilisateur.campus.nom }}</td>
                        <td><img class="photo_profil" src="{{ utilisateur.photo ? asset('img/profil/' ~ utilisateur.photo) : asset('img/profil/default_profil.png') }}" alt="Photo de {{ utilisateur.pseudo }}"></td>
                        <td><a href="{{ path('utilisateur_modification', { 'id': utilisateur.id }) }}"
                               class="btn btn-success px-4k">Modifier</a>
                            <form method="post" action="{{ path('suppression_profil', { 'id': utilisateur.id }) }}" onsubmit="return confirm('Voulez-vous vraiment supprimer cet utilisateur ?');">
                                <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ utilisateur.id) }}">
                                <button class="btn btn-danger px-4">Supprimer</button>
                            </form>
                        </td>

                    </tr>
                {% else %}
                    <tr>
                        <td>Aucun utilisateur</td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
    </div>

    <div class="text-center mt-4">
        <a href="{{ path('app_register') }}" class="btn btn-primary d-inline-block">Ajouter un utilisateur</a>
    </div>

{% endblock %}