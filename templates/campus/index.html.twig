{% extends 'base.html.twig' %}

{% block title %}Les campus :){% endblock %}

{% block body %}
    <div class="container w-50">
        <h1 class="m-5 text-center">Gérer les campus</h1>
        <div class="container">
            {{ form_start(formRecherche, {'attr': {'id': 'filterForm'}}) }}
            <div class="form-group d-flex align-items-center mb-3">
                {{ form_label(formRecherche.searchCampus, null, {'label_attr': {'class': 'me-2'}}) }}
                {{ form_widget(formRecherche.searchCampus, {'attr': {'class': 'form-control m-2 fw-normal w-25', 'placeholder': "Search"}}) }}
                <div class="d-flex ms-2">
                    <button type="submit" class="btn btn-info btn-sm me-2 fas fa-search" title="Recherche"></button>
                    <a class="btn btn-danger btn-sm fas fa-undo" title="Réinitialiser recherche" href="{{ path('app_campus') }}"></a>
                </div>
            </div>
            {{ form_end(formRecherche) }}
        </div>
        <div style="max-height: 400px; overflow-y: auto;">
            <table class="table table-striped">
                <thead style="position: sticky; top: 0; background-color: white; z-index: 1">
                <tr>
                    <th class="ps-5">Campus</th>
                    <th class="text-center">Action</th>
                </tr>
                </thead>
                <tbody>
                {% for campus in campuses %}
                    <tr class="align-middle">
                        <td class="ps-5" style="white-space: nowrap;">{{ campus.nom }}</td>
                        <td class="w-50">
                            <div class="d-flex justify-content-end">
                                <form method="POST" action="{{ path('campus_modification', {'id': campus.id }) }}" class="me-5">
                                    <button class="btn btn-success px-4k" type="submit">Modifier</button>
                                </form>
                                <form method="POST" action="{{ path('suppression_campus', {'id': campus.id }) }}" onsubmit="return confirm('Voulez-vous vraiment supprimer ce campus?')">
                                    <button class="btn btn-danger px-4k" type="submit">Supprimer</button>
                                </form>
                            </div>
                        </td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>

        <div class="d-flex justify-content-end mt-5">
            <a href="{{ path('app_admin') }}" class="btn btn-secondary me-3">Retour</a>
            <form method="POST" action="{{ path('ajouter_campus') }}">
                <button class="btn btn-success px-4k" type="submit">Ajouter</button>
            </form>
        </div>

    </div>

{% endblock %}
