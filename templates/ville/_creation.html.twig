{% extends 'base.html.twig' %}

{% block title %}
    {{ isEdit ? 'Modifier une ville' : 'Ajouter une ville' }}
{% endblock %}
{% block body %}
    <h1 class="text-center mt-5">
        {{ isEdit ? 'Modifier la ville de ' ~ ville.nom : 'Ajouter une ville' }}
    </h1>

    <div class="container w-25 mt-5">
        {{ form_start(villeForm) }}

        <div class="form-group row mt-5">
            <div class="col-sm-12">
                {{ form_widget(villeForm.nom, {'attr': {'class': 'form-control', 'placeholder': 'Ville'}}) }}
                {{ form_errors(villeForm.nom, {'attr': {'class': 'form-control'}}) }}
            </div>
        </div>

        <div class="form-group row mt-5">
            <div class="col-sm-12">
                {{ form_widget(villeForm.codePostal, {'attr': {'class': 'form-control', 'placeholder': 'CodePostal'}}) }}
            </div>
        </div>

        <div class="form-group d-flex justify-content-end mt-5">
            <a href="javascript:history.back()" class="btn btn-dark me-3 fas fa-undo"></a>
            <button type="submit" class='btn btn-light fas fa-save' title="Enregistrer"></button>
        </div>

        {{ form_end(villeForm) }}

    </div>

{% endblock %}
