{% extends 'base.html.twig' %}

{% block title %}
    {{ parent() ~ title }}
{% endblock %}

{% block body %}
    {#  #}
    <h2 class="text-center fw-bold mb-5 mx-1 mx-md-4 mt-4">{{ title }}</h2>
    <div class="container h-100">
        <div class="row d-flex justify-content-center align-items-center h-100">
            <div class="col-lg-12 col-xl-12">
                <div class="text-black" style="border-radius: 25px;">
                    {{ form_start(sortieform, {'attr': {'class': "mx-1 mx-md-4 needs-validation was-validated"}}) }}
                    <div class="row">
                        <div class="col-6">
                            <div class="mb-4">
                                {{ form_row(sortieform.nom, {'attr': {'class': "form-control"}}) }}
                            </div>
                            <div class="mb-4">
                                {{ form_row(sortieform.dateHeureDebut) }}
                            </div>
                            <div class="mb-4">
                                {{ form_row(sortieform.dateLimiteInscription, {'attr': {'class': "form-control", 'type': 'datetime-local'}}) }}
                            </div>
                            <div class="mb-4">
                                {{ form_row(sortieform.nbInscriptionMax, {'attr': {'class': "form-control"}}) }}
                            </div>
                            <div class="mb-4">
                                {{ form_row(sortieform.duree, {'attr': {'class': "form-control"}}) }}
                            </div>
                        </div>
                        <div class="col-6">
                            <div class="mb-4">
                                {{ form_row(sortieform.campus, {'attr': {'class': "form-control"}}) }}
                            </div>
                            <div class="mb-4">
                                {{ form_row(sortieform.ville, {'attr': {'class': "form-control"}}) }}
                            </div>
                            <div class="mb-4">
                                {{ form_row(sortieform.lieu, {'attr': {'class': "form-control"}}) }}
                            </div>
                            <div class="mb-4">
                                {{ form_row(sortieform.rue, {'attr': {'class': "form-control"}}) }}
                            </div>
                            <div class="mb-4">
                                <label for="latitude">Latitude / Longitude</label>
                                <div class="d-flex">
                                    {{ form_widget(sortieform.latitude, {'attr': {'class': 'form-control me-2'}}) }}
                                    {{ form_widget(sortieform.longitude, {'attr': {'class': 'form-control'}}) }}
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-12 mb-4">
                            <div class="form-outline">
                                {{ form_row(sortieform.infosSortie, {'attr': {'class': "form-control"}}) }}
                                {{ form_errors(sortieform.infosSortie) }}
                            </div>
                        </div>
                    </div>
                    <div class="d-flex justify-content-center">
                        <div class="d-flex justify-content-center mx-4 mb-3 mb-lg-4">
                            <button type="submit" name="action" value="enregistrer" class="btn btn-outline-primary">Enregistrer</button>
                        </div>
                        <div class="d-flex justify-content-center mx-4 mb-3 mb-lg-4">
                            <button type="submit" name="action" value="publier" class="btn btn-outline-warning">Publier</button>
                        </div>
                        {% if sortie is not null %}
                        <div class="d-flex justify-content-center mx-4 mb-3 mb-lg-4">
                            <button type="submit" name="action" value="supprimer" class="btn btn-outline-warning">Supprimer</button>
                        </div>
                        {% endif %}
                        <div class="d-flex justify-content-center mx-4 mb-3 mb-lg-4">
                            <a class="btn btn-outline-info" href="{{ path('sorties_liste') }}">Retour à la liste</a>
                        </div>
                    </div>
                    {{ form_end(sortieform) }}
                </div>
            </div>
        </div>
    </div>

    <script>
        document.getElementById('{{ sortieform.ville.vars.id }}').addEventListener('change', function () {
            let villeId = this.value;
            let lieuSelect = document.getElementById('{{ sortieform.lieu.vars.id }}');

            // Effacer les options actuelles du lieu
            lieuSelect.innerHTML = '<option value="">-- Sélectionner un lieu --</option>';
            document.getElementById('{{ sortieform.rue.vars.id }}').value = '';
            document.getElementById('{{ sortieform.latitude.vars.id }}').value = '';
            document.getElementById('{{ sortieform.longitude.vars.id }}').value = '';

            // Si aucune ville n'est sélectionnée, ne pas faire la requête
            if (!villeId) {
                return;
            }

            // Requête AJAX pour récupérer les lieux en fonction de la ville sélectionnée
            fetch(`/lieux/${villeId}`)
                .then(response => response.json())
                .then(data => {
                    data.forEach(lieu => {
                        let option = document.createElement('option');
                        option.value = lieu.id;
                        option.text = lieu.nom;
                        lieuSelect.add(option);
                    });
                })
                .catch(error => console.error('Erreur lors de la récupération des lieux:', error));
        });

        // Event listener for lieu selection to fill in rue, latitude, and longitude
        document.getElementById('{{ sortieform.lieu.vars.id }}').addEventListener('change', function () {
            let lieuId = this.value;

            // If no lieu is selected, clear the fields
            if (!lieuId) {
                document.getElementById('{{ sortieform.rue.vars.id }}').value = '';
                document.getElementById('{{ sortieform.latitude.vars.id }}').value = '';
                document.getElementById('{{ sortieform.longitude.vars.id }}').value = '';
                return;
            }

            // AJAX request to get the details of the selected lieu
            fetch(`/lieu/details/${lieuId}`)
                .then(response => response.json())
                .then(lieu => {
                    document.getElementById('{{ sortieform.rue.vars.id }}').value = lieu.rue;
                    document.getElementById('{{ sortieform.latitude.vars.id }}').value = lieu.latitude;
                    document.getElementById('{{ sortieform.longitude.vars.id }}').value = lieu.longitude;
                })
                .catch(error => console.error('Erreur lors de la récupération des détails du lieu:', error));
        });
    </script>

{% endblock %}