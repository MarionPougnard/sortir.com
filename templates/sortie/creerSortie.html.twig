{% extends 'base.html.twig' %}

{% block title %}
    {{ parent() ~ title }}
{% endblock %}

{% block body %}
    {#  #}
    <h2 class="text-center fw-bold mb-5 mx-1 mx-md-4 mt-4">{{ title }}</h2>
    <div class="container h-100">
        <div class="row d-flex justify-content-center align-items-center h-100">
            <div class="col-lg-12 col-xl-12">
                <div class="text-black" style="border-radius: 25px;">
                    {{ form_start(sortieform, {'attr': {'class': "mx-1 mx-md-4 needs-validation was-validated"}}) }}
                    <div class="row">
                        <div class="col-6">
                            <div class="mb-4">
                                {{ form_row(sortieform.nom, {'attr': {'class': "form-control"}}) }}
                                {{ form_errors(sortieform.nom) }}
                            </div>
                            <div class="mb-4">
                                {{ form_row(sortieform.dateHeureDebut, {'attr': {'class': "form-control"}}) }}
                                {{ form_errors(sortieform.dateHeureDebut) }}
                            </div>
                            <div class="mb-4">
                                {{ form_row(sortieform.dateLimiteInscription, {'attr': {'class': "form-control"}}) }}
                                {{ form_errors(sortieform.dateLimiteInscription) }}
                            </div>
                            <div class="mb-4">
                                {{ form_row(sortieform.nbInscriptionMax, {'attr': {'class': "form-control"}}) }}
                                {{ form_errors(sortieform.nbInscriptionMax) }}
                            </div>
                            <div class="mb-4">
                                {{ form_row(sortieform.duree, {'attr': {'class': "form-control"}}) }}
                                {{ form_errors(sortieform.duree) }}
                            </div>
                        </div>
                        <div class="col-6">
                            <div class="mb-4">
                                {{ form_row(sortieform.campus, {'attr': {'class': "form-control"}}) }}
                                {{ form_errors(sortieform.campus) }}
                            </div>
                            <div class="mb-4">
                                {{ form_row(sortieform.ville, {'attr': {'class': "form-control"}}) }}
                                {{ form_errors(sortieform.ville) }}
                            </div>
                            <div class="mb-4">
                                {{ form_row(sortieform.lieu, {'attr': {'class': "form-control"}}) }}
                                {{ form_errors(sortieform.lieu) }}
                            </div>
                            <div class="mb-4">
                                {{ form_row(sortieform.rue, {'attr': {'class': "form-control"}}) }}
                                {{ form_errors(sortieform.rue) }}
                            </div>
                            <div class="mb-4">
                                <label for="latitude">Latitude / Longitude</label>
                                <div class="d-flex">
                                    {{ form_widget(sortieform.latitude, {'attr': {'class': 'form-control me-2'}}) }}
                                    {{ form_widget(sortieform.longitude, {'attr': {'class': 'form-control'}}) }}
                                </div>
                                {{ form_errors(sortieform.latitude) }}
                                {{ form_errors(sortieform.longitude) }}
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-12 mb-4">
                            <div class="form-outline">
                                {{ form_row(sortieform.infosSortie, {'attr': {'class': "form-control"}}) }}
                                {{ form_errors(sortieform.infosSortie) }}
                            </div>
                        </div>
                    </div>
                    <div class="d-flex justify-content-center">
                        <div class="d-flex justify-content-center mx-4 mb-3 mb-lg-4">
                            <button type="submit" name="action" value="enregistrer" class="btn btn-outline-primary">Enregistrer</button>
                        </div>
                        <div class="d-flex justify-content-center mx-4 mb-3 mb-lg-4">
                            <button type="submit" name="action" value="publier" class="btn btn-outline-warning">Publier</button>
                        </div>
                        {% if sortie is not null %}
                        <div class="d-flex justify-content-center mx-4 mb-3 mb-lg-4">
                            <button type="submit" name="action" value="supprimer" class="btn btn-outline-warning">Supprimer</button>
                        </div>
                        {% endif %}
                        <div class="d-flex justify-content-center mx-4 mb-3 mb-lg-4">
                            <a class="btn btn-outline-info" href="{{ path('sorties_liste') }}">Retour à la liste</a>
                        </div>
                    </div>
                    {{ form_end(sortieform) }}
                </div>
            </div>
        </div>
    </div>

    <script>
        document.addEventListener('DOMContentLoaded', function () {
            const villeSelect = document.querySelector('select[name="sortie[ville]"]');
            const lieuSelect = document.querySelector('select[name="sortie[lieu]"]');
            const latitudeInput = document.querySelector('input[name="latitude"]');
            const longitudeInput = document.querySelector('input[name="longitude"]');
            const rueInput = document.querySelector('input[name="rue"]');

            villeSelect.addEventListener('change', function () {
                const villeId = this.value;

                // Réinitialiser le champ des lieux
                lieuSelect.innerHTML = '<option value=""></option>';
                latitudeInput.value = '';
                longitudeInput.value = '';
                rueInput.value = '';


                if (villeId) {
                    fetch(`/lieux/${villeId}`)
                        .then(response => response.json())
                        .then(data => {
                            data.forEach(lieu => {
                                const option = document.createElement('option');
                                option.value = lieu.id;
                                option.textContent = lieu.nom;
                                lieuSelect.appendChild(option);
                            });
                        });
                }
            });

            lieuSelect.addEventListener('change', function () {
                const lieuId = this.value;

                if (lieuId) {
                    fetch(`/lieu/${lieuId}`)
                        .then(response => response.json())
                        .then(data => {
                            rueInput.value = data.rue;
                            latitudeInput.value = data.latitude;
                            longitudeInput.value = data.longitude;
                        });
                }
            });
        });
    </script>

{% endblock %}