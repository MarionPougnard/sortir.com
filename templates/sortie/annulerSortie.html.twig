{% extends 'base.html.twig' %}

{% block title %}
    {{ title }}
{% endblock %}

{% block body %}
    <div class="container">
        <h1 class="m-5 text-center">Annuler la sortie : {{ sortie.nom }}</h1>
        <div class="card p-5">
            <p>Date et heure de d√©but : {{ sortie.dateHeureDebut|date('d/m/Y H:i') }}</p>
            <p>Campus : {{ sortie.campus.nom }}</p>
            <p>Lieu : {{ sortie.lieu.nom }}</p>
            <p>Ville : {{ sortie.lieu.ville.nom }}</p>
            {{ form_start(annulationSortieForm, {'method': 'POST'}) }}
            {{ form_widget(annulationSortieForm) }}
            <div class="d-flex justify-content-end">
                <button type="submit" class="btn btn-light fas fa-save" title="Enregistrer"></button>
            </div>
            {{ form_end(annulationSortieForm) }}
        </div>
    </div>

{% endblock %}