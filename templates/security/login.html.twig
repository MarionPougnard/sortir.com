{% extends 'base.html.twig' %}

{% block title %}Connexion{% endblock %}

{% block body %}

<div id="title" class="text-center mt-2">
    <h1 class="text-white">Connexion</h1>
</div>

<div class="container">
    <div class="row justify-content-center">

        <div class="col-md-8">

            <form method="post">
                {% if error %}
                    <div class="alert alert-danger mt-5">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                {% endif %}

                {% if app.user %}
                    <div class="mb-3">
                        Vous êtes connecté(e) en tant que {{ app.user.userIdentifier }}, <a
                                href="{{ path('app_logout') }}">Déconnecter</a>
                    </div>
                {% endif %}

                <div class="form-group row mt-5">
                    <label for="inputEmail" class="col-sm-3 col-form-label">Email / Pseudo</label>
                    <div class="col-sm-9">
                        <input type="text" value="{{ last_username }}" name="email" id="inputEmail"
                               class="form-control" required autofocus>
                    </div>
                </div>


                <div class="form-group row mt-5">
                    <label for="inputPassword" class="col-sm-3 col-form-label">Mot de passe</label>
                    <div class="col-sm-9">
                        <input type="password" name="password" id="inputPassword" class="form-control" required>
                    </div>
                </div>

                <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

                <div class="form-group row mt-5">
                    <div class="col-sm-3 col-form-label">
                        <button class="btn btn-success" type="submit">Se connecter</button>
                    </div>
                    <div class="col-sm-9 d-flex align-items-center">
                        <label>
                            <input type="checkbox" name="_remember_me"> Se souvenir de moi
                        </label>
                    </div>
                </div>

                <div class="form-group row">
                    <div class="col-sm-3 d-none"></div>
                    <div class="col-sm-9">
                       {# <a href="{{ path('security_forgot_password_step_1') }}">Mot de passe oublié ?</a>#}
                    </div>
                </div>

            </form>
        </div>
    </div>
    {% endblock %}
