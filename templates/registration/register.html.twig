{% extends 'base.html.twig' %}

{% block title %}{{ title }}{% endblock %}

{% block body %}
<h1 class="text-center mt-3">{{ title }}</h1>

<div class="container">
    <div class="row justify-content-center">

        <div class="col-md-8">
            {{ form_errors(registrationForm) }}
        </div>

        <div class="container">
            <div class="row justify-content-center">

                <div class="col-md-8">
                    {{ form_start(registrationForm) }}

                    <div class="form-group row mt-5">
                        <label for="nom" class="col-sm-3 col-form-label">
                            {{ form_label(registrationForm.campus) }}
                        </label>
                        <div class="col-sm-9">
                            {{ form_widget(registrationForm.campus, {'attr': {'class': 'form-control'}}) }}
                            {{ form_errors(registrationForm.campus) }}
                        </div>
                    </div>

                            <div class="form-group row mt-3">
                                <label for="nom" class="col-sm-3 col-form-label">
                    {{ form_label(registrationForm.nom) }}
                                </label>
                                <div class="col-sm-9">
                                    {{ form_widget(registrationForm.nom, {'attr': {'class': 'form-control'}}) }}
                                    {{ form_errors(registrationForm.nom) }}
                                </div>
                            </div>

                    <div class="form-group row mt-3">
                        <label for="prenom" class="col-sm-3 col-form-label">
                    {{ form_label(registrationForm.prenom) }}
                        </label>
                        <div class="col-sm-9">
                            {{ form_widget(registrationForm.prenom, {'attr': {'class': 'form-control'}}) }}
                            {{ form_errors(registrationForm.prenom) }}
                        </div>
                    </div>

                    <div class="form-group row mt-3">
                        <label for="pseudo" class="col-sm-3 col-form-label">
                    {{ form_label(registrationForm.pseudo) }}
                        </label>
                        <div class="col-sm-9">
                            {{ form_widget(registrationForm.pseudo, {'attr': {'class': 'form-control'}}) }}
                            {{ form_errors(registrationForm.pseudo) }}
                        </div>
                    </div>

                    <div class="form-group row mt-3">
                        <label for="email" class="col-sm-3 col-form-label">
                            {{ form_label(registrationForm.email) }}
                        </label>
                        <div class="col-sm-9">
                            {{ form_widget(registrationForm.email, {'attr': {'class': 'form-control'}}) }}
                            {{ form_errors(registrationForm.email) }}
                        </div>
                    </div>

                    <div class="form-group row mt-3">
                        <label for="telephone" class="col-sm-3 col-form-label">
                    {{ form_label(registrationForm.telephone) }}
                        </label>
                        <div class="col-sm-9">
                            {{ form_widget(registrationForm.telephone, {'attr': {'class': 'form-control'}}) }}
                            {{ form_errors(registrationForm.telephone) }}
                        </div>
                    </div>

                    <div class="form-group row mt-3">
                        <label for="password" class="col-sm-3 col-form-label">
                    {{ form_label(registrationForm.plainPassword) }}
                        </label>
                        <div class="col-sm-9">
                            {{ form_widget(registrationForm.plainPassword, {'attr': {'class': 'form-control'}}) }}
                            {{ form_errors(registrationForm.plainPassword) }}
                        </div>
                    </div>
                    <div class="form-group row mt-3">
                        <label for="password" class="col-sm-3 col-form-label">
                            {{ form_label(registrationForm.photo) }}
                        </label>
                        <div class="col-sm-9">
                            {{ form_widget(registrationForm.photo, {'attr': {'class': 'form-control'}}) }}
                            {{ form_errors(registrationForm.photo) }}
                        </div>
                    </div>
                    <div class="form-group row col-offset-2 mt-3 d-flex justify-content-end align-items-center">
                        <div class="form-check me-2">
                            {{ form_widget(registrationForm.agreeTerms, {'attr': {'class': 'form-check-input'}}) }}
                            <label class="form-check-label" for="agreeTerms">
                                {{ form_label(registrationForm.agreeTerms) }}
                            </label>
                            {{ form_errors(registrationForm.agreeTerms) }}
                        </div>

                        <div>
                            {{ form_widget(registrationForm.save, {'attr': {'class': 'btn btn-light'}}) }}
                        </div>
                    </div>
                    {{ form_end(registrationForm) }}
                </div>
            </div>
            {% endblock %}
